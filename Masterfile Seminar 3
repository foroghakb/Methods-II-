##OUR MODELS##

m1 <- lm(Gov$bti_ci ~ Gov$bci_bci,
                 data = Gov)

#(tami)testing model when controling for ethnic fractionalization
 model1.2 <- lm(bci_bci ~fe_etfra+ bti_ci, data=Gov)
 summary(model1.2)

